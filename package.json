{
    "name": "notes-digest",
    "displayName": "notes-digest",
    "description": "",
    "version": "0.1.0",
    "publisher": "kontrail",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:ndi.scan",
        "onView:notes-digest.view",
        "onLanguage:typescript",
        "onLanguage:javascript"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "ndi.scan",
                "title": "Scan for notes"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "notes-digest.view",
                    "name": "Notes Digest"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/glob": "^5.0.35",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "glob": "^7.1.2"
    }
}
